pipeline {
    agent any

    stages {
        stage('git clone') {
            steps {
                echo 'cloning the git repoo'
				git branch: 'main', url: 'https://github.com/divya4518/mindcircuit13.git'
            }
        }
		
		stage('build artifact') {
            steps {
                echo 'building the artifact using maven'
				sh 'mvn clean install'
            }
        }
		
		stage('artifact deployment') {
            steps {
                echo 'deploying the artifact to the tomacat'
				deploy adapters: [tomcat9(alternativeDeploymentContext: '', credentialsId: 'tom-cred', path: '', url: 'http://3.108.249.4:8090/')], contextPath: 'insta-app', war: '**/*.war'
            }
        }
    }
}
